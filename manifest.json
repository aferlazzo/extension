{
	"name": "Start the IMDb demo",
	"version": "1.0",
	"manifest_version": 2,
	"description": "This tool is used to demo SAAP functionality.",
	//"background": { "scripts": ["background.js"] },
	"content_scripts": [
    {
      "matches": ["http://www.imdb.com/title/*/"],
      "css": ["GCmystyles.css"],
      //"js": ["GCvisitInvite.js"]
      "js": ["jquery.min.js", "jquery.bxSlider.min.js", "jquery.easing.1.3.js", "GCvisitInvite.js"]
    }
  ],
	"permissions": [
	"tabs", //to use the windows API declare the "tabs" permission 
	"http://www.imdb.com/*"
	],
	"browser_action": {
	  "default_icon": "icon48.png" //,
	  //"default_popup": "popup.html"
	}
}
